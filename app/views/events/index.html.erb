<h1>All Events</h1>
<table border="1" cellpadding="6" cellspacing="0">
  <thead>
    <tr>
      <th>Sport</th>
      <th>Location</th>
      <th>Event Time</th>
      <th>Players Needed</th>
      <th>Host</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.sport.name %></td>
        <td><%= event.location %></td>
        <td><%= event.event_time.strftime("%Y-%m-%d %H:%M") if event.event_time %></td>
        <td><%= event.players_needed || "N/A" %></td>
        <td><%= event.host.name %></td>
        <td><%= truncate(event.description, length: 40) %></td>
        <td><%= link_to "Show", event_path(event) %></td>
        <td><%= link_to "Edit", edit_event_path(event) %></td>
        <td><%= button_to "Delete",
                        event_path(event),
                        method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete this event?" } %>
        </td>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "New Event", new_event_path %>
